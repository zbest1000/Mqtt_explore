# MQTT Explore Server Configuration

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# AI Configuration (OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# MQTT Discovery Configuration
AUTO_START_DISCOVERY=true
DEFAULT_NETWORK_RANGE=192.168.1.0/24
MAX_CONNECTIONS=10
MESSAGE_BUFFER_SIZE=10000

# Network Scanning Configuration
SCAN_TIMEOUT=10000
ENABLE_MDNS=true
ENABLE_SSDP=true
ENABLE_PORT_SCAN=true

# Security Configuration
ENABLE_CORS=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/mqtt-explore.log

# Database Configuration (for future expansion)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mqtt_explore
# DB_USER=postgres
# DB_PASSWORD=password

# Performance Configuration
WORKER_THREADS=4
ENABLE_CLUSTERING=false

# Export Configuration
EXPORT_MAX_SIZE=100MB
EXPORT_RETENTION_HOURS=24

# Sparkplug Configuration
SPARKPLUG_DECODE_TIMEOUT=5000
SPARKPLUG_MAX_METRICS=1000

# Development Configuration
DEBUG=mqtt-explore:*
VERBOSE_LOGGING=false